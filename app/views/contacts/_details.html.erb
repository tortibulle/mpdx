<% exhibit(contact, self).tap do |contact_exhibit| %>
  <div class="cols col_50">
    <table class="meta">
      <tr>
        <th colspan="2"><%= _('Addresses') %></th>
      </tr>
      <% contact.addresses.each do |address| %>
        <% exhibit(address, self).tap do |address_exhibit| %>
          <tr>
            <td class="meta_name" nowrap="nowrap">
              <%= _(address.location.present? ? address.location : 'Mailing') %>
              <% if contact.addresses.length > 1 && address.primary_mailing_address? %>
                <i class="icon-ok green"></i>
              <% end %>
            </td>
            <td class="meta_data">
              <%= address_exhibit.to_html %>
              <br />
              <%= link_to(_('Map It'), "http://maps.google.com?q=#{address_exhibit.to_google}", target: '_blank', class: 'mapit') %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>

  <div class="cols col_50">
    <table class="meta">
      <tr>
        <th>
          <%= _('People') %>
          <% if contact.people.length > 1 %>
            <small>
              <%= link_to(_('(Click here to merge duplicates)'), '#', class: 'js-merge_people') %>
              <%= link_to(_('(Cancel merging)'), '#', class: 'js-cancel_merge_people js-merge_related', style: 'display:none') %>
            </small>
            <div id="person_merge_winner" style="display:none" title="<%= _('Pick the winner of the merge') %>">
              <%= _('Data from the "losers" will get copied to the "winner". No data will be lost by merging.') %>
              <%= form_tag(merge_contact_people_path(contact), id: 'merge_people_form', remote: true) do %>
                <%= hidden_field_tag :merge_people_ids %>
                <ul>
                  <% contact.people.each do |person| %>
                    <li style="display:none" id="<%= "merge_winner_#{person.id}"%>">
                      <%= radio_button_tag('merge_winner', person.id) %>
                      <%= person %>
                    </li>
                  <% end %>
                </ul>
              <% end %>
            </div>
          <% end %>
        </th>
      </tr>
      <tr>
        <td class="js-people">
          <% contact.people.each do |person| %>
            <div class="smallperson">
              <div class="name">
                <%= check_box_tag('people[]', person.id, false, id: "person_checkbox_#{person.id}", class: 'js-merge_related js-merge_checkbox', style: 'display:none') %>
                <%= link_to(person, contact_person_path(contact, person)) %>
              </div>
              <%= render 'people/contact_details_compact', person: person %>
            </div>
          <% end %>
          <%= submit_tag(_('Merge checked people'), class: 'js-merge_related', style: 'display:none') %>
        </td>
      </tr>
    </table>
  </div>
  <div class="clr"></div>
<% end %>
