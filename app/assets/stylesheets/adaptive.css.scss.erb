@import "elements";

/*--------------------------------------------------------------------------------------------------*/
/* 480 media query */
/*--------------------------------------------------------------------------------------------------*/

@media screen and (min-width: 0px) and (max-width: 480px) {

  <% if Rails.env.development? %>
    body:after { content: "480-600";  position: absolute; top: 1em; left: 1em; z-index: 999; }
  <% end %>

  .comments {width: auto;
    .comment_form {
      textarea {width: auto;}
    }
  }
}





/*--------------------------------------------------------------------------------------------------*/
/* 760 media query */
/*--------------------------------------------------------------------------------------------------*/

@media screen and (min-width: 0px) and (max-width: 960px) {
  <% if Rails.env.development? %>
    body:after { content: "750-980";  position: absolute; top: 1em; left: 1em; z-index: 999; }
  <% end %>
  
  $maxwidth: 100%;

  hgroup #mainmenu .outer {padding: 0 16px;}
  hgroup .outer {padding: 0 16px; max-width: $maxwidth; min-width: 420px;}
  
  #global { background-color: #0077ae; }
  #menu { clear: both; }
  
  .outer, #content {
    max-width: $maxwidth;
    min-width: 420px;
    clear: both;
  }
  #contentbody.withleft, 
	#contentbody.withright { 
		width: auto; 
		float: none;
	}
  #contact_drawer {
		display: none;
	}
	form {
		.radiocheck,
		.formstyles {
			label {margin-left: 30px; display: block  !important; padding: 2px 0;}
			input[type=radio] {float: left;}
		}
	}
	
  #leftmenu > ul > li {
    &.selected > a { border-left: 5px solid $blue; }
    .menu_item { padding-left: 42px; }
    a.menu_item { background-position-x: 13px; }
    span.menu_item { margin-left: 8px; }
    &.selected span.menu_item { border: 0; }
  }
}

@media screen and (min-width: 0px) and (max-width: 560px) {
  #user { background-image: none; }
  #brand .logo { width: 170px; }
}
